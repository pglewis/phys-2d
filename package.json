{
  "name": "phys-2d-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
      "p2d",
      "demo/*"
  ],
  "scripts": {
    "build-vec2": "npm run build -w p2d-vec2",
    "build-canvas": "npm run build -w p2d-canvas",
    "build-camera": "npm run build -w p2d-camera",
    "build-lib": "npm run build-vec2 && npm run build-canvas && npm run build-camera",
    "cannonball": "npm run dev -w cannonball",
    "collision": "npm run dev -w collision",
    "constraint": "npm run dev -w constraint",
    "pinball": "npm run dev -w pinball"
  }
}
